generator client {
  provider = "prisma-client"
  output   = "../src/config/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum DocStatus {
  nepatvirtintas // PENDING
  patvirtintas // SIGNED
  atšauktas // CANCELED
  anuliuotas // SUSPENDED
}

model Instrument {
  id              Int    @id @default(autoincrement())
  instrument_name String
  instrument_code Int    @unique
  instrument_exp  Int    @default(6)

  items SterilizationCycleItem[]
}

model Department {
  id              Int    @id @default(autoincrement())
  department_name String
  department_code Int    @unique

  items SterilizationCycleItem[]
}

model Sterilizer {
  id              Int    @id @default(autoincrement())
  sterilizer_code Int    @unique
  sterilizer_name String @db.VarChar(100)

  cycles SterilizationCycle[]
}

model Jwt {
  user_id       String @id @db.VarChar(36)
  refresh_token String @db.Text
  username      String @db.VarChar(100)
  display_name  String @db.VarChar(100)
  division      String @db.VarChar(100)
  role          String @db.VarChar(100)
}

model SterilizationCycle {
  id                 Int      @id @default(autoincrement())
  user_id            String
  sterilizer_id      Int
  cycle_number       Int
  sterilization_date DateTime @default(now())

  sterilizer Sterilizer               @relation(fields: [sterilizer_id], references: [id])
  items      SterilizationCycleItem[]

  @@index([cycle_number])
  @@index([user_id])
}

model SterilizationCycleItem {
  id            Int     @id @default(autoincrement())
  short_code    String? @unique @db.VarChar(6)
  cycle_id      Int
  instrument_id Int
  department_id Int
  success       Boolean @default(true)

  cycle      SterilizationCycle @relation(fields: [cycle_id], references: [id])
  instrument Instrument         @relation(fields: [instrument_id], references: [id])
  department Department         @relation(fields: [department_id], references: [id])

  // 1:1 – instrumentas šiame cikle gali būti panaudotas tik kartą
  usage InstrumentUsage? // <-- vietoje masyvo: vienas arba nėra
}

model InstrumentUsage {
  id            Int       @id @default(autoincrement())
  cycle_item_id Int       @unique // <-- užtikrina „tik kartą“
  used_by       String
  patient       String    @db.VarChar(60)
  doc_id        Int
  doc_status    DocStatus @default(nepatvirtintas)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  cycle_item SterilizationCycleItem @relation(fields: [cycle_item_id], references: [id])

  @@index([used_by])
}

model Printer {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  ip_address String   @db.VarChar(15)
  port       Int
  active     Boolean  @default(true)
  created_at DateTime @default(now())

  @@unique([ip_address, port])
}
